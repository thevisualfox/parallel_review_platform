{% extends 'base/default.html.twig' %}

{% block title %}Login{% endblock %}

{% block content %}
    <main class="main-content">
        {% include "elements/background.html.twig" %}
        <section class="pane">
            {% for type, message in app.flashes() %}
                {% include "elements/alert.html.twig" with {
                    message: message|first
                } %}
            {% endfor %}
            {% if error %}
                {% include "elements/alert.html.twig" with {
                    message: error.messageKey|trans(error.messageData, 'security'),
                    type: 'danger'
                } %}
            {% endif %}
            <div class="pane__panel panel panel--login">
                <div class="panel__body">
                    <h1 class="text-uppercase text-white mb-0">Login</h1>
                    <p class="text-muted--70 text-white">Login with your e-mail and password</p>
                    <form class="panel__form form mt-7" method="POST">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        <div class="row gutters-2">
                            <div class="col-12">
                                <label class="sr-only" for="inputEmail">Email</label>
                                <input type="email" class="form-control" id="inputEmail" name="email" value="{{ last_username }}"  placeholder="Email" autofocus required>
                            </div>
                            <div class="col-12">
                                <label class="sr-only" for="inputPassword">Password</label>
                                <input type="password" class="form-control" id="inputPassword" name="password" placeholder="Password" required>
                            </div>
                        </div>
                        <div class="d-flex align-items-md-center flex-column flex-md-row mb-4">
                            <div class="custom-control custom-checkbox mb-0">
                                <input type="checkbox" class="custom-control-input" id="inputRememberMe" name="_remember_me">
                                <label class="custom-control-label text-white text-muted--70" for="inputRememberMe">Keep me logged in</label>
                            </div>
                        </div>
                        <div class="row gutters-2">
                            <div class="col-12 col-md-6">
                                <button type="submit" class="btn btn-secondary btn-block">
                                    <span class="btn__text">Log in</span>
                                </button>
                            </div>
                            <div class="col-12 col-md-6">
                                <a class="btn btn-outline-white btn-block" href="{{ path('app_signup') }}" title="sign up">
                                    <span class="btn__text">Sign up</span>
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </section>
    </main>
{% endblock %}
